<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="android:style/Theme.Holo.Light.DarkActionBar" />

    <style name="AppTheme.PopupOverlay" parent="android:style/Theme.Holo.Light.DarkActionBar" />


    <style name="background">
        <item name="android:background">@color/colorGreen</item>
    </style>

    <style name="buttonStyle">
        <item name="android:background">@color/colorSky</item>
        <item name="android:padding">@dimen/fiftydp</item>
        <item name="android:textSize">@dimen/thirtydp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>










